<div id="login">
  <%= form_for(:user, as: :post, url: login_users_path(@user)) do |f| %>
    <%= f.label(:email, "Email:") %><br />
    <%= f.text_field(:email, :size => 32) %><br />
    <br />
    <%= f.label(:password, "Password:") %><br />
    <%= f.password_field(:password, :size => 32) %><br />
    <%= f.submit "Login" %>
  <% end %>
</div>